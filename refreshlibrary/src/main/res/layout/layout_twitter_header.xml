<?xml version="1.0" encoding="utf-8"?>
<com.aspsine.swipetoloadlayout.TwitterRefreshHeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="48dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/twitter_pull_arrow"/>

        <ImageView
            android:id="@+id/ivSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="48dp"
           android:layout_centerHorizontal="true"
            android:background="@mipmap/qq_refresh_success"/>
<!-- android:layout_toLeftOf="@+id/tvRefresh"
   style="@style/mProgress_circle"-->
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:indeterminateDrawable="@anim/progressbar_circle"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvRefresh"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#999999"
            android:visibility="gone"/>
    </RelativeLayout>
</com.aspsine.swipetoloadlayout.TwitterRefreshHeaderView>