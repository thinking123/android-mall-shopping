<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_register"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include layout="@layout/view_title_bar_common" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_norme_10" />

    <View style="@style/line_horizontal_style" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/register_item_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:padding="@dimen/register_item_padding"
            android:text="@string/hint_user_name"
            android:textColor="@color/text_norm_6"
            android:textSize="16.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="商"
            android:textColor="@color/text_norm_6"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20.0dip"
                android:background="@null"
                android:hint="@string/login_logo_username"
                android:inputType="number"
                android:maxLength="16"
                android:maxLines="1"
                android:paddingRight="50.0dip"
                android:text=""
                android:textColor="@color/text_drak_4"
                android:textColorHint="@color/text_hint"
                android:textSize="14.0sp" />

        </RelativeLayout>

        <View style="@style/line_vertical_style" />

        <TextView
            android:id="@+id/tv_get_verificode"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:padding="@dimen/register_item_padding"
            android:text="@string/get_verification_code"
            android:textColor="@color/text_green"
            android:textSize="16.0sp" />

    </LinearLayout>

    <View style="@style/line_horizontal_style" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/register_item_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:padding="@dimen/register_item_padding"
            android:text="@string/verification_code"
            android:textColor="@color/text_norm_6"
            android:textSize="16.0sp" />

        <EditText
            android:id="@+id/et_verification_code"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20.0dip"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="@string/hint_verification_code"
            android:inputType="number"
            android:maxLength="4"
            android:maxLines="1"
            android:paddingRight="50.0dip"
            android:text=""
            android:textColor="@color/text_drak_4"
            android:textColorHint="@color/text_hint"
            android:textSize="14.0sp" />

    </LinearLayout>

    <View style="@style/line_horizontal_style" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/register_item_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:padding="@dimen/register_item_padding"
            android:text="@string/hint_pwd"
            android:textColor="@color/text_norm_6"
            android:textSize="16.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="商"
            android:textColor="@color/text_norm_6"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20.0dip"
                android:background="@null"
                android:digits="@string/digits_no_text"
                android:hint="@string/input_use_pwd"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingRight="50.0dip"
                android:text=""
                android:textColor="@color/text_drak_4"
                android:textColorHint="@color/text_hint"
                android:textSize="14.0sp" />

            <CheckBox
                android:id="@+id/box_ped_clear"
                android:layout_width="35.0dip"
                android:layout_height="35.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:checked="true"
                android:drawableRight="@drawable/bg_check_pwd_status"
                android:padding="10.0dip" />
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/line_horizontal_style" />

    <TextView
        android:id="@+id/tv_get_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10.0dip"
        android:padding="@dimen/padding_norme_15"
        android:text="@string/get_voice_verificaton_code"
        android:textColor="@color/text_green"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:layout_margin="10.0dip"
            android:background="@drawable/gray_btn"
            android:text="@string/hint_register"
            android:textColor="@android:color/white"
            android:textSize="18.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_term"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10.0dip"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip"
            android:text="@string/hint_register_term1"
            android:textColor="@color/text_norm_6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10.0dip"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip"
            android:text="@string/hint_register_term2"
            android:textColor="@color/text_green" />
    </LinearLayout>
</LinearLayout>